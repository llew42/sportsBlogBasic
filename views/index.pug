extends layout

block content
  .jumbotron.showcase
    .container
      h1 #{title}
      p.lead The best sports articles around the world!
  .container
    .row
      .col-md-12
        each article, i in articles
          a(href=`/articles/show/${article._id}`)
            h2.post-title #{article.title}
          h4.post-title #{article.subtitle}
          p.post-meta
            | Posted by #{article.author}
            | on #{moment(article.created_at).format('MMMM Do YYYY')}
          hr
