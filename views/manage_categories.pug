extends layout

block content
  .container
    .row
      .col-md-8
        h1 #{title}
      .col-md-4
        a(class='btn btn-primary add-btn' href='/manage/categories/add') Add Category
    != messages()
    table(class='table table-striped')
      tr
        th Category Title
        th
      each category, i in categories
        tr
          td #{category.title}
          td
            a(class='btn btn-tiny btn-outline-primary' href=`/manage/category/edit/${category._id}`) Edit
